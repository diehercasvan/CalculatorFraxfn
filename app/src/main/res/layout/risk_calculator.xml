<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Calculadora de riesgo de fractura⁵"
        android:id="@+id/textView19"
        android:textSize="20dip"
        android:textColor="#ff7178ba"
        android:fontFamily="@string/century"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView19"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/containerCalculater"
            android:layout_margin="5dp"
            android:background="#ffffffff"
            android:weightSum="1">

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:id="@+id/tableContainer">

                <TableRow android:layout_height="200dp">
                    <TextView
                        android:layout_column="1"
                        android:text="Sexo"
                        android:padding="3dip"
                        android:id="@+id/text"
                        android:textColor="#7178BA"
                        android:fontFamily="@string/century" />

                    <RadioGroup
                        android:layout_width="150dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioGroup1">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hombre"
                            android:id="@+id/rbtHombre"
                            android:layout_column="3"
                            android:checked="false"
                            android:fontFamily="@string/century"
                            android:buttonTint="#26a69a"
                            android:buttonTintMode="src_atop" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mujer"
                            android:id="@+id/rbtMujer"
                            android:layout_column="4"
                            android:checked="false"
                            android:fontFamily="@string/century"
                            android:buttonTint="#26a69a"
                            android:buttonTintMode="src_atop" />
                    </RadioGroup>

                </TableRow>
                <View
                    android:layout_height="1dip"
                    android:background="#ffd9d9d9" />
                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:text="Edad"
                        android:padding="3dip"
                        android:id="@+id/lbltxt2"
                        android:textColor="#7178BA"
                        android:fontFamily="@string/century" />

                    <Spinner
                        android:layout_width="200dp"
                        android:layout_height="38dp"
                        android:id="@+id/spinner"
                        android:spinnerMode="dropdown" />

                </TableRow>

                <View
                    android:layout_height="1dip"
                    android:background="#ffd9d9d9" />

                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:text="Peso en Kg"
                        android:padding="3dip"
                        android:id="@+id/lbltext"
                        android:textColor="#7178BA"
                        android:fontFamily="@string/century" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="38dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/txtWeight"
                        android:layout_column="2"
                        android:maxLength="3"
                        android:fontFamily="@string/century" />
                </TableRow>

                <View
                    android:layout_height="1dip"
                    android:background="#ffd9d9d9" />

                <TableRow>

                    <TextView
                        android:text="Estatura en cm"
                        android:padding="3dip"
                        android:layout_column="1"
                        android:id="@+id/lblText1"
                        android:textColor="#7178BA"
                        android:fontFamily="@string/century" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="38dp"
                        android:ems="10"
                        android:id="@+id/txtHeight"
                        android:layout_column="2"
                        android:inputType="number"
                        android:maxLength="3"
                        android:fontFamily="@string/century" />
                </TableRow>


                <View
                    android:layout_height="1dip"
                    android:background="#ffd9d9d9" />
            </TableLayout>
            <TableLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:text="¿Fractura previa?"
                        android:padding="3dip"
                        android:layout_column="1"
                        android:id="@+id/textView"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textColor="#7178BA"
                        android:fontFamily="@string/century"
                        android:textSize="14dip" />
                    <RadioGroup android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/radioGroup2">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sí"
                            android:id="@+id/rbtFacturaPrevia"
                            android:layout_column="3"
                            android:checked="false"
                            android:fontFamily="@string/century"
                            android:buttonTint="#26a69a"
                            android:buttonTintMode="src_atop" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:id="@+id/rbtFacturaPrevia1"
                            android:layout_column="4"
                            android:checked="true"
                            android:fontFamily="@string/century"
                            android:buttonTint="#26a69a"
                            android:buttonTintMode="src_atop" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:text="¿Padres con fractura de cadera?"
                        android:padding="3dip"
                        android:layout_column="1"
                        android:id="@+id/textView6"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textColor="#7178BA"
                        android:fontFamily="@string/century"
                        android:textSize="14dip" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioGroup3">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sí"
                            android:id="@+id/rbtFacturaCadera"
                            android:layout_column="3"
                            android:checked="false"
                            android:fontFamily="@string/century"
                            android:buttonTint="#26a69a"
                            android:buttonTintMode="src_atop" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:id="@+id/rbtFacturaCadera1"
                            android:layout_column="4"
                            android:checked="true"
                            android:fontFamily="@string/century"
                            android:buttonTint="#26a69a"
                            android:buttonTintMode="src_atop" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:text="¿Fumador activo?"
                        android:padding="3dip"
                        android:layout_column="1"
                        android:id="@+id/textView5"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textColor="#7178BA"
                        android:fontFamily="@string/century"
                        android:textSize="14dip" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioGroup4">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sí"
                            android:id="@+id/rbtFumador"
                            android:layout_column="3"
                            android:checked="false"
                            android:fontFamily="@string/century"
                            android:buttonTint="#26a69a"
                            android:buttonTintMode="src_atop" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:id="@+id/rbtFumador1"
                            android:layout_column="4"
                            android:checked="true"
                            android:fontFamily="@string/century"
                            android:buttonTint="#26a69a"
                            android:buttonTintMode="src_atop" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:text="¿Consume  glucocorticoides?"
                        android:padding="3dip"
                        android:layout_column="1"
                        android:id="@+id/textView4"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textColor="#7178BA"
                        android:fontFamily="@string/century"
                        android:textSize="14dip" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioGroup5">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sí"
                            android:id="@+id/rbtConsume"
                            android:layout_column="3"
                            android:checked="false"
                            android:fontFamily="@string/century"
                            android:buttonTint="#26a69a"
                            android:buttonTintMode="src_atop" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:id="@+id/rbtConsume1"
                            android:layout_column="4"
                            android:checked="true"
                            android:fontFamily="@string/century"
                            android:buttonTint="#26a69a"
                            android:buttonTintMode="src_atop" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:text="¿Artritis reumatoide?"
                        android:padding="3dip"
                        android:layout_column="1"
                        android:id="@+id/textView3"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textColor="#7178BA"
                        android:fontFamily="@string/century"
                        android:textSize="14dip" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioGroup6">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sí"
                            android:id="@+id/rbtArtritis"
                            android:layout_column="3"
                            android:checked="false"
                            android:fontFamily="@string/century"
                            android:buttonTint="#26a69a"
                            android:buttonTintMode="src_atop" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:id="@+id/rbtArtritis1"
                            android:layout_column="4"
                            android:checked="true"
                            android:fontFamily="@string/century"
                            android:buttonTint="#26a69a"
                            android:buttonTintMode="src_atop" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:text="¿Osteoporosis secundaria?"
                        android:padding="3dip"
                        android:layout_column="1"
                        android:id="@+id/textView2"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textColor="#7178BA"
                        android:fontFamily="@string/century"
                        android:textSize="14dip" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioGroup7">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sí"
                            android:id="@+id/rbtOsteoporosis"
                            android:layout_column="3"
                            android:checked="false"
                            android:fontFamily="@string/century"
                            android:buttonTint="#26a69a"
                            android:buttonTintMode="src_atop" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:id="@+id/rbtOsteoporosis1"
                            android:layout_column="4"
                            android:checked="true"
                            android:fontFamily="@string/century"
                            android:buttonTint="#26a69a"
                            android:buttonTintMode="src_atop" />
                    </RadioGroup>
                </TableRow>

                <TableRow android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:text="¿Alcohol, 3 o más dosis por día?"
                        android:padding="3dip"
                        android:layout_column="1"
                        android:id="@+id/lbltext3"
                        android:textColor="#7178BA"
                        android:fontFamily="@string/century"
                        android:layout_width="250dp"
                        android:textSize="14dip" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="false"
                        android:id="@+id/radioGroup8">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sí"
                            android:id="@+id/rbtAlcohol"
                            android:layout_column="3"
                            android:checked="false"
                            android:fontFamily="@string/century"
                            android:buttonTint="#26a69a"
                            android:buttonTintMode="src_atop" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:id="@+id/rbtAlcohol1"
                            android:layout_column="4"
                            android:checked="true"
                            android:fontFamily="@string/century"
                            android:buttonTint="#26a69a"
                            android:buttonTintMode="src_atop" />
                    </RadioGroup>

                </TableRow>

            </TableLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Calcular"
                android:id="@+id/btnCalculater"
                android:background="#7178BA"
                android:textColor="#ffffffff"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:fontFamily="@string/century" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ContainerAnswer"
            android:padding="20dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#00ffffff"
                android:id="@+id/tableLayout"
                android:layout_alignParentTop="true">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Probabilidad de padecer una fractura en 10 años"
                        android:id="@+id/textView8"
                        android:layout_gravity="left|center_horizontal"
                        android:background="#00ffffff"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textColor="#ff7178ba"
                        android:textSize="18dip"
                        android:layout_column="1"
                        android:layout_span="3"
                        android:fontFamily="@string/century" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:id="@+id/imageView"
                        android:layout_column="1"
                        android:src="@drawable/item_1"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/txtIMC"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16dip"
                        android:textIsSelectable="false"
                        android:layout_column="2"
                        android:gravity="center_vertical"
                        android:autoText="false"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:fontFamily="@string/century" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:id="@+id/imageView2"
                        android:layout_column="1"
                        android:src="@drawable/item_2"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="                                   "
                        android:id="@+id/txtClasificacion"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16dip"
                        android:textIsSelectable="false"
                        android:layout_column="2"
                        android:gravity="center_vertical"
                        android:autoText="false"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:fontFamily="@string/century" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/table">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:id="@+id/imageView3"
                        android:layout_column="1"
                        android:src="@drawable/item_3"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/txtOst"
                        android:textSize="16dip"
                        android:textIsSelectable="false"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical"
                        android:autoText="false"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:text="                                  "
                        android:fontFamily="@string/century" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/row">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:id="@+id/imageView4"
                        android:layout_column="1"
                        android:src="@drawable/item_4"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/txtCad"
                        android:textSize="16dip"
                        android:textIsSelectable="false"
                        android:layout_column="2"
                        android:gravity="center|right"
                        android:layout_gravity="center_horizontal"
                        android:autoText="false"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:text="                                   "
                        android:fontFamily="@string/century" />
                </TableRow>
                <View
                    android:layout_height="1dip"
                    android:background="#FF909090" />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/row2">

                    <TextView
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/txtData"
                        android:background="#00ffffff"
                        android:padding="5dp"
                        android:textColor="#7178BA"
                        android:textSize="12dip"
                        android:layout_column="1"
                        android:layout_span="3"
                        android:text="@string/valor"
                        android:layout_gravity="left"
                        android:visibility="gone"
                        android:fontFamily="@string/century" />
                </TableRow>
                <View
                    android:layout_height="1dip"
                    android:background="#FF909090" />

            </TableLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/referencia"
                android:id="@+id/textView18"
                android:layout_alignEnd="@+id/tableLayout"
                android:layout_alignStart="@+id/tableLayout"
                android:background="#00ffffff"
                android:textSize="9dip"
                android:fontFamily="@string/century"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/tableLayout"
                android:gravity="bottom" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>